<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- 顶部导航栏 -->
    <LinearLayout
        android:id="@+id/topNavBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent">
 <ImageButton
     android:id="@+id/topNavExpand"
     android:layout_width="20dp"
     android:layout_height="25dp"
     android:layout_weight="1"
    android:background="@drawable/selector2"
     android:src="@drawable/expand"
     android:layout_marginRight="20dp"
     android:scaleType="fitCenter"/>


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            app:tabMode="scrollable"
            app:tabTextColor="#C1C1C1"
            style="@style/CustomTabLayout"
            app:tabIndicatorColor="#C1C1C1"
            android:background="#000000"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/topNavSearch"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_weight="1"
           android:background="@drawable/selector2"
            android:layout_marginLeft="20dp"
            android:src="@drawable/search"
            android:scaleType="fitCenter"/>

    </LinearLayout>



    <!-- 视频内容区域 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBar"
        app:layout_constraintTop_toBottomOf="@id/topNavBar"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />
    <!-- 底部导航栏 -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/shape1"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/changeHome"
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="首页"
            android:textColor="#C1C1C1"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/selector" />

        <TextView
            android:id="@+id/navHome"
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:text="朋友"
            android:textColor="#C1C1C1"
           android:background="@drawable/selector" />

        <ImageButton
            android:id="@+id/navPublish"
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:scaleType="fitCenter"
            android:src="@drawable/publish" />

        <TextView
            android:id="@+id/navMesage"
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:text="消息"
            android:textColor="#C1C1C1"
           android:background="@drawable/selector" />

        <TextView
            android:id="@+id/navProfile"
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="我"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#C1C1C1"
            android:layout_gravity="center"
           android:background="@drawable/selector" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
